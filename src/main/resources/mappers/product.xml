<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.survive.dao.ProductDAO">

	<select id="selectProducts" resultType="kr.co.survive.vo.ProductVO">
		SELECT * FROM product;
	</select>
  
  	<select id="selectProduct" resultType="kr.co.survive.vo.ProductVO">
		SELECT * FROM product WHERE pno = #{pno};
	</select>
	
	<insert id="insertPayment">
		INSERT INTO `payment` set
								`name` = 'test',
								`price`= 1000, 
								`type`= 'card', 
								`merchant_uid` = #{merchant_uid}, 
								`date` = '2024-06-17', 
								`zip` = 2323, 
								`addr1` = 'test', 
								`addr2`= 'test';
	</insert>
	
</mapper>